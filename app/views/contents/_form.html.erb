<% form_for @content, :url => contents_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :type %><br />
    <%= select "c", "type", ['Post']  %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <div id="extra_form">
    <%= render :partial => @content_type, :locals => { :f => f }  %>
  </div>

  <p><%= f.submit "Submit" %></p>
<% end %>
